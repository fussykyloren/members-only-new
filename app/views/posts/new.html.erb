<%= provide(:title, "New Post") %>
<% if @post.errors.any? %>
    <p>Post could not be made because:</p>
    <ul>
        <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>


<%= form_for(@post, url: posts_path) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :body %>
    <%= f.text_field :body %>

    <%= f.submit :submit %>
<% end %>